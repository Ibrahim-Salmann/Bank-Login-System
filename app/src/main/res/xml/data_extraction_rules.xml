<?xml version="1.0" encoding="utf-8"?>
<!--
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
   for details.
-->
<data-extraction-rules>
    <cloud-backup>
        <!--
        We are including the main application database and the user session preferences.
        The database contains all user-created content like their book list.
        The shared preferences contain the user's login status.
        Cache and other temporary files are excluded by default.
        -->
        <include domain="database" path="AppDatabase.db"/>
        <include domain="sharedpref" path="LoggedIN.xml"/>
    </cloud-backup>
    <device-transfer>
        <!--
        For device-to-device transfers, we include the same data as cloud backup
        to ensure a consistent user experience when switching devices.
        -->
        <include domain="database" path="AppDatabase.db"/>
        <include domain="sharedpref" path="LoggedIN.xml"/>
    </device-transfer>
</data-extraction-rules>
